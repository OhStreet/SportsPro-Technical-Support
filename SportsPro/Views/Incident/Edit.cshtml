@model IncidentFormViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@* Using viewmodel operation mode for title *@
@{
    string title = Model.OperationMode + " Incident";
    ViewData["Title"] = title;
}


<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    @* Hidden field for IncidentID using the view model *@
    <input type="hidden" asp-for="CurrentIncident.IncidentID" />

    @* Customer dropdown using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.CustomerID" class="form-label">Customer</label>
        <select asp-for="CurrentIncident.CustomerID" class="form-select"
                asp-items="@(new SelectList(Model.Customers, "CustomerID", "FullName"))">
            <option value="0">-- Select customer --</option>
        </select>
        <span asp-validation-for="CurrentIncident.CustomerID" class="text-danger"></span>
    </div>

    @* Product dropdown using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.ProductID" class="form-label">Product</label>
        <select asp-for="CurrentIncident.ProductID" class="form-select"
                asp-items="@(new SelectList(Model.Products, "ProductID", "Name"))">
            <option value="0">-- Select product --</option>
        </select>
        <span asp-validation-for="CurrentIncident.ProductID" class="text-danger"></span>
    </div>

    @* Technician dropdown using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.TechnicianID" class="form-label">Technician</label>
        <select asp-for="CurrentIncident.TechnicianID" class="form-select"
                asp-items="@(new SelectList(Model.Technicians, "TechnicianID", "Name"))">
            <option value="0">-- Select technician --</option>
        </select>
        <span asp-validation-for="CurrentIncident.TechnicianID" class="text-danger"></span>
    </div>

    @* Title input using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.Title" class="form-label">Title</label>
        <input asp-for="CurrentIncident.Title" class="form-control" />
        <span asp-validation-for="CurrentIncident.Title" class="text-danger"></span>
    </div>

    @* Description input using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.Description" class="form-label">Description</label>
        <textarea asp-for="CurrentIncident.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="CurrentIncident.Description" class="text-danger"></span>
    </div>

    @* Date Opened input using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.DateOpened" class="form-label">Date Opened</label>
        <input asp-for="CurrentIncident.DateOpened" type="date" class="form-control" />
        <span asp-validation-for="CurrentIncident.DateOpened" class="text-danger"></span>
    </div>

    @* Date Closed input using the view model *@
    <div class="mb-3">
        <label asp-for="CurrentIncident.DateClosed" class="form-label">Date Closed</label>
        <input asp-for="CurrentIncident.DateClosed" type="date" class="form-control" />
        <span asp-validation-for="CurrentIncident.DateClosed" class="text-danger"></span>
    </div>

    @* Save and Cancel buttons *@
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Incident" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
<!--Addition: jQuery scripts only on necessary pages - JS-->
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
