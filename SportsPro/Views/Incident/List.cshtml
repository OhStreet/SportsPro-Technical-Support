@model IncidentListViewModel
@{
	ViewData["Title"] = "Incident Manager";
}

<h1>Incident Manager</h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Title</th>
			<th>Customer</th>
			<th>Product</th>
			<th>Date Opened</th>
		</tr>
	</thead>
	<tbody>

		@* Using ViewModel to display incidents *@
		@foreach (Incident incident in Model.Incidents)
		{
			<tr>
				<td>@incident.Title</td>
				<td>@incident.Customer?.FullName</td>
				<td>@incident.Product?.Name</td>
				<td>@incident.DateOpened.ToShortDateString()</td>
				<td>
					<a class="btn btn-primary" asp-controller="Incident" asp-action="Edit"
					   asp-route-id="@incident.IncidentID">Edit</a>
				</td>
				<td>
					<a class="btn btn-primary" asp-controller="Incident" asp-action="Delete"
					   asp-route-id="@incident.IncidentID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<a asp-controller="Incident" asp-action="Add" class="btn btn-primary">Add Incident</a>
