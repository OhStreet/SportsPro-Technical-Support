@model List<Product>
@{
    ViewData["Title"] = "Product Manager";
}

<h1>Product Manager</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductCode</td>
                <td>@product.Name</td>
                <td>@product.YearlyPrice</td>
                <td>@product.ReleaseDate.ToString("MM/dd/yyyy")</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Edit"
                    asp-route-id="@product.ProductID">Edit</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Product" asp-action="Delete"
                       asp-route-id="@product.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>


