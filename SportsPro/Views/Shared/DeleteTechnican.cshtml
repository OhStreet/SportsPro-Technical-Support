
@model SportsPro.Models.Technician
@{
    ViewData["Title"] = "Delete Technician";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="container py-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Are you sure?</h4>
        <p class="mb-0">This will permanently delete the following technician:</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" asp-controller="Technician" method="post" class="d-inline">
        @Html.AntiForgeryToken()
        <!-- Hidden key -->
        <input type="hidden" asp-for="TechnicianId" />

        <button type="submit" class="btn btn-danger me-2">
            Delete
        </button>
    </form>

    <a asp-action="Index" asp-controller="Technician" class="btn btn-outline-secondary">
        Cancel
    </a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
``
