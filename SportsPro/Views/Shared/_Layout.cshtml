<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-primary mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">SportsPro</a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Addition, specifying active links - JS-->
                @{
                    string c = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                    string a = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                }
                <nav class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav me-auto">
                        <a class="nav-item nav-link @(c == "Home" && a == "Index" ? "active" : "")"
                           asp-controller="Home" asp-action="Index">Home</a>

                        <a class="nav-item nav-link @(c == "Product" ? "active" : "")"
                           asp-controller="Product" asp-action="List">Products</a>

                        <a class="nav-item nav-link @(c == "Technician" ? "active" : "")"
                           asp-controller="Technician" asp-action="List">Technicians</a>

                        <a class="nav-item nav-link @(c == "Customer" ? "active" : "")"
                           asp-controller="Customer" asp-action="List">Customers</a>

                        <a class="nav-item nav-link @(c == "Incident" ? "active" : "")"
                           asp-controller="Incident" asp-action="List">Incidents</a>

                        <a class="nav-item nav-link @(c == "Registration" ? "active" : "")"
                           asp-controller="Registration" asp-action="Index">Registrations</a>
                    </div>

                    <div class="navbar-nav ms-auto">
                        <a class="nav-item nav-link @(c == "Home" && a == "About" ? "active" : "")"
                           asp-controller="Home" asp-action="About">About</a>
                    </div>
                </nav>
            </div>
        </nav>
    </header>

    <div class="container">
        @* Flash/TempData message (shows once, then disappears on refresh) *@
        @{
            var flash = TempData["SuccessMessage"] as string;   // reading marks it for deletion
            var kind = TempData["MessageType"] as string;       // optional; not set in controller
            var alertClass = string.IsNullOrWhiteSpace(kind) ? "alert-success" : $"alert-{kind}";
        }
        @if (!string.IsNullOrWhiteSpace(flash))
        {
            <div class="alert @alertClass alert-dismissible fade show mt-2" role="alert">
                @flash
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3 pb-3">
        <div class="container">&copy; @DateTime.Now.Year - SportsPro</div>
    </footer>

    <!--Removed jQuery libraries - JS-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
